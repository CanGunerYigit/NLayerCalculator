@model Calculator.CommonLayer.Dto.AddDto

@{
    ViewBag.Title = "Hesap Makinesi";
}

<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Calculator</h2>
        <div class="row">
            @using (Html.BeginForm("Index", "Calculator", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="Number1">First Number</label>
                    @Html.TextBoxFor(model => model.Number1, new { @class = "form-control", type = "text" })
                </div>
                <div class="form-group">
                    <label for="Number2">Second Number</label>
                    @Html.TextBoxFor(model => model.Number2, new { @class = "form-control", type = "text" })
                </div>
                <div class="form-group">
                    <label for="Result">Result</label>
                    @Html.TextBoxFor(model => model.Result, new { @class = "form-control", type = "text", disabled = "disabled" })
                </div>
                <button type="submit" class="btn btn-info" name="operation" value="add">+</button>
                <button type="submit" class="btn btn-danger" name="operation" value="sub">-</button>
                <button type="submit" class="btn btn-warning" name="operation" value="mul">x</button>
                <button type="submit" class="btn btn-dark" name="operation" value="div">/</button>
                <button type="submit" class="btn btn-secondary" id="clear" name="operation" value="clear">Clear</button>
            }
        </div>
    </div>
</body>
</html>
